{
  "name": "ci-viewer",
  "version": "1.0.0",
  "description": "",
  "author": "JasonEtco <jasonetco@gmail.com> (https://github.com/jasonetco/ci-viewer)",
  "license": "ISC",
  "repository": "https://github.com/JasonEtco/ci-viewer.git",
  "scripts": {
    "start": "node ./node_modules/probot/bin/probot-run ./src/index.js",
    "start-dev": "nodemon ./node_modules/probot/bin/probot-run ./src/index.js",
    "test": "jest --coverage && standard",
    "test:update": "jest -u",
    "build": "webpack -p",
    "deploy": "npm run build && gcloud beta functions deploy ci-reporter --trigger-http --entry-point bot"
  },
  "dependencies": {
    "@google-cloud/logging-bunyan": "^0.7.0",
    "delay": "^2.0.0",
    "probot": "^5.0.0",
    "probot-ts": "^4.0.1-typescript",
    "request": "^2.83.0",
    "request-promise-native": "^1.0.5",
    "strip-ansi": "^4.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "jest": "^22.2.2",
    "localtunnel": "^1.8.2",
    "nock": "^9.1.4",
    "nodemon": "^1.14.12",
    "smee-client": "^1.0.1",
    "standard": "^11.0.0",
    "webpack": "^4.0.0"
  },
  "engines": {
    "node": ">= 7.7.0",
    "npm": ">= 4.0.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/tests/fixtures/",
      "<rootDir>/tests/setup.js"
    ],
    "setupFiles": [
      "<rootDir>/tests/setup.js"
    ]
  }
}
